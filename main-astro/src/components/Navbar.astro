---
import { Home, PieChart, Car, Building2, Unplug, Banknote } from '@lucide/astro';

const navItems = [
    { name: "Connector", href: "/", icon: Unplug, color: 'bg-slate-600' },
    { name: "Budget", href: "/budget", icon: PieChart, color: 'bg-blue-600' },
    { name: "Income", href:"/income", icon:Banknote, color: 'bg-emerald-600'},
    { name: "Mortgage", href: "/mortgage", icon: Home, color: 'bg-rose-600' },
    { name: "Apartment", href: "/apartment", icon: Building2, color: 'bg-purple-600' },
    { name: "Car", href: "/car", icon: Car, color: 'bg-amber-600' },
];

const pathName = Astro.url.pathname;
---

<aside class="fixed left-6 top-1/2 -translate-y-1/2 z-50 hidden md:flex flex-col gap-3 p-3 bg-white border border-white shadow-[0_8px_30px_rgb(0,0,0,0.04)] rounded-[2rem]">
  {navItems.map((item) => {
    const Icon = item.icon;
    const active = pathName === item.href;
    return (
      <a
        href={item.href}
        class:list={[
          "relative group p-4 rounded-2xl transition-all duration-500",
          active 
            ? `text-slate-50 ${item.color} shadow-inner` 
            : "text-slate-400 hover:bg-slate-50 hover:text-slate-600"
        ]}
      >
        <Icon size={24} stroke-width={active ? 2.5 : 2} />
        
        <div class="absolute left-16 top-1/2 -translate-y-1/2 scale-0 group-hover:scale-100 transition-all origin-left">
          <span class="bg-white border border-slate-100 text-slate-900 text-xs font-bold px-4 py-2 rounded-xl shadow-xl whitespace-nowrap">
            {item.name}
          </span>
        </div>
      </a>
    )
  })}
</aside>

<nav class="fixed bottom-6 left-6 right-6 z-50 md:hidden bg-white/90 backdrop-blur-xl border border-white rounded-[2rem] p-2 shadow-2xl">
  <div class="flex justify-around items-center">
    {navItems.map((item) => {
      const Icon = item.icon;
      const active = pathName === item.href;
      return (
        <a href={item.href} class:list={["p-3 rounded-2xl transition-colors", active ? `bg-slate-100 ${item.color}` : "text-slate-400"]}>
          <Icon size={22} />
        </a>
      )
    })}
  </div>
</nav>

