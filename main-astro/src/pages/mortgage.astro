---
import Layout from "../layouts/Layout.astro";
import { Home, Landmark, ArrowRight } from "@lucide/astro";
---

<Layout title="Mortgage Calculator" themeColor="bg-rose-50">
  <main class="md:ml-24 p-4 lg:p-8 max-w-[1200px] mx-auto pb-32">
    
    <header class="bg-white/80 backdrop-blur-md rounded-[2.5rem] p-8 mb-8 border border-white shadow-sm flex flex-col md:flex-row justify-between items-center gap-6">
      <div class="flex items-center gap-4 text-rose-600">
        <div class="p-4 bg-rose-600 text-white rounded-2xl shadow-lg shadow-rose-200">
          <Home size={32} />
        </div>
        <div>
          <h1 class="text-3xl font-black text-slate-900 tracking-tight">Mortgage Calc</h1>
          <p class="text-slate-500 font-medium">Full Monthly PITI Estimate</p>
        </div>
      </div>
      <div class="text-center md:text-right">
        <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Total Monthly Payment</p>
        <p id="display-monthly-payment" class="text-4xl font-black text-rose-600">$0</p>
      </div>
    </header>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <section class="space-y-6">
        <div class="bg-white rounded-[2.5rem] p-8 shadow-sm border border-slate-100">
          <h2 class="text-xl font-bold text-slate-800 mb-6 flex items-center gap-2">
            <Landmark class="text-rose-500" size={20} /> Loan & Escrow
          </h2>
          
          <div class="space-y-4">
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-[10px] font-black text-slate-400 uppercase mb-2 ml-1">Home Price</label>
                <input type="number" id="input-home-price" placeholder="450000" class="w-full bg-slate-50 p-4 rounded-2xl outline-none font-bold text-lg border-2 border-transparent focus:border-rose-500 focus:bg-white transition-all" />
              </div>
              <div>
                <label class="block text-[10px] font-black text-slate-400 uppercase mb-2 ml-1">Down Payment</label>
                <input type="number" id="input-down-payment" placeholder="90000" class="w-full bg-slate-50 p-4 rounded-2xl outline-none font-bold text-lg border-2 border-transparent focus:border-rose-500 focus:bg-white transition-all" />
              </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-[10px] font-black text-slate-400 uppercase mb-2 ml-1">Interest Rate (%)</label>
                <input type="number" id="input-rate" step="0.1" placeholder="6.5" class="w-full bg-slate-50 p-4 rounded-2xl outline-none font-bold text-lg border-2 border-transparent focus:border-rose-500 focus:bg-white transition-all" />
              </div>
              <div>
                <label class="block text-[10px] font-black text-slate-400 uppercase mb-2 ml-1">Loan Term</label>
                <select id="input-term" class="w-full bg-slate-50 p-4 rounded-2xl outline-none font-bold text-slate-700">
                  <option value="30">30 Years</option>
                  <option value="15">15 Years</option>
                </select>
              </div>
            </div>

            <div class="grid grid-cols-2 gap-4 pt-4 border-t border-slate-50">
                <div>
                  <label class="block text-[10px] font-black text-slate-400 uppercase mb-2 ml-1">Property Tax (Annual %)</label>
                  <input type="number" id="input-tax-rate" step="0.1" placeholder="1.2" class="w-full bg-slate-50 p-4 rounded-2xl outline-none font-bold border-2 border-transparent focus:border-rose-500 focus:bg-white transition-all" />
                </div>
                <div>
                  <label class="block text-[10px] font-black text-slate-400 uppercase mb-2 ml-1">Monthly Insurance</label>
                  <input type="number" id="input-insurance" placeholder="150" class="w-full bg-slate-50 p-4 rounded-2xl outline-none font-bold border-2 border-transparent focus:border-rose-500 focus:bg-white transition-all" />
                </div>
              </div>
          </div>
        </div>

        <button id="btn-push-mortgage" class="w-full bg-slate-900 text-white p-6 rounded-[2rem] font-black text-lg hover:bg-rose-600 transition-all flex items-center justify-center gap-3 group shadow-xl">
          Push to Budget Needs <ArrowRight class="group-hover:translate-x-2 transition-transform" />
        </button>
      </section>

      <section class="bg-white rounded-[2.5rem] p-8 shadow-sm border border-slate-100">
        <h2 class="text-xl font-bold text-slate-800 mb-6">Payment Breakdown</h2>
        <div class="space-y-4">
            <div class="flex justify-between p-4 bg-slate-50 rounded-2xl">
                <span class="text-slate-500 font-bold">Principal & Interest</span>
                <span id="breakdown-pi" class="font-black text-slate-900">$0</span>
            </div>
            <div class="flex justify-between p-4 bg-slate-50 rounded-2xl">
                <span class="text-slate-500 font-bold">Property Taxes</span>
                <span id="breakdown-tax" class="font-black text-slate-900">$0</span>
            </div>
            <div class="flex justify-between p-4 bg-slate-50 rounded-2xl">
                <span class="text-slate-500 font-bold">Home Insurance</span>
                <span id="breakdown-ins" class="font-black text-slate-900">$0</span>
            </div>
        </div>
        
        <div class="mt-8 p-6 bg-rose-50 rounded-3xl border border-rose-100">
            <p class="text-xs font-black text-rose-400 uppercase tracking-widest mb-2">Pro Tip</p>
            <p class="text-rose-900 text-sm font-medium leading-relaxed">This calculation includes <b>PITI</b> (Principal, Interest, Taxes, and Insurance). Most banks require this total to be less than 28% of your gross income.</p>
        </div>
      </section>
    </div>
  </main>
</Layout>

<script>
  import { any } from "astro:schema";
import { sync_app, app_data, init_data } from "../utils/financial-data";

  function setupMortgage() {
    init_data();

    // Helper function to get an Input element safely with type-hinting
    /** @returns {HTMLInputElement} */
    const getIn = (id:any) => document.getElementById(id) as HTMLInputElement;

    const priceIn = getIn('input-home-price');
    const downIn = getIn('input-down-payment');
    const rateIn = getIn('input-rate');
    const termIn = getIn('input-term'); // Note: if this is a <select>, use getSelect
    const taxIn = getIn('input-tax-rate');
    const insIn = getIn('input-insurance');
    
    const display = document.getElementById('display-monthly-payment');
    const pushBtn = document.getElementById('btn-push-mortgage');

    function calculate() {
        // Access values using .value safely
        const price = parseFloat(priceIn?.value || "450000");
        const down = parseFloat(downIn?.value || "90000");
        const annualRate = parseFloat(rateIn?.value || "6.5");
        const years = parseInt(termIn?.value || "30");
        const taxRate = (parseFloat(taxIn?.value || "1.2")) / 100;
        const insurance = parseFloat(insIn?.value || "150");

        // Logic: P&I
        const principal = price - down;
        const monthlyRate = annualRate / 100 / 12;
        const n = years * 12;

        let pi = 0;
        if (principal > 0 && monthlyRate > 0) {
            pi = (principal * monthlyRate * Math.pow(1 + monthlyRate, n)) / (Math.pow(1 + monthlyRate, n) - 1);
        } else if (principal > 0) {
            pi = principal / n;
        }

        const monthlyTax = (price * taxRate) / 12;
        const total = pi + monthlyTax + insurance;

        // Update display
        if (display) {
            display.innerText = `$${Math.round(total).toLocaleString()}`;
        }
        
        // Save to master state
        app_data.mortgage.monthly_total = Math.round(total);
    }

    // Add listeners
    [priceIn, downIn, rateIn, termIn, taxIn, insIn].forEach(input => {
        input?.addEventListener('input', calculate);
    });

    // PUSH TO BUDGET LOGIC
pushBtn?.addEventListener('click', () => {
    const mortgageAmt = app_data.mortgage.monthly_total;
    
    // 1. Ensure the array exists so we don't crash
    if (!Array.isArray(app_data.budget.needs)) {
        app_data.budget.needs = [];
    }
    
    // 2. Filter out ONLY the old Mortgage, keeping everything else (past data)
    const otherNeeds = app_data.budget.needs.filter(item => item.name !== "Mortgage");
    
    // 3. Create the new full list
    const finalNeedsList = [...otherNeeds, { name: "Mortgage", amount: mortgageAmt }];

    // 4. IMPORTANT: Update the master object directly
    app_data.budget.needs = finalNeedsList;

    // 5. Sync the entire budget object to save it
    sync_app('budget.needs', finalNeedsList);

    // UI Feedback
    const originalText = pushBtn.innerText;
    pushBtn.innerText = "âœ“ Added to Budget!";
    setTimeout(() => pushBtn.innerText = originalText, 2000);
});

    calculate(); // Run once to show initial numbers
  }

  // Run on first load
  setupMortgage();
  // Run every time a page is swapped (if using View Transitions)
  document.addEventListener('astro:page-load', setupMortgage);
</script>