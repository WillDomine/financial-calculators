---
import '../styles/global.css'
import Navbar from '../components/Navbar.astro'

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="block h-screen p-5 bg-slate-50">
		{title === "Home" ? <p></p> : <Navbar />}
		<slot />
	</body>
</html>

<script>
	import {init_data} from '../utils/financial-data'

	//Loads all of the past user data
	init_data()
	
	//Updates every page transition
	document.addEventListener('astro:page-load', init_data);
</script>